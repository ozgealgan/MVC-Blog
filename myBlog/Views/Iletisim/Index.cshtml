@model myBlog.Models.Mesaj
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("#gonder").click(function () {
            var mail = $("#mail").val();
            var name = $("#name").val();
            var mesaj = $("#mesaj").val();
            $.ajax({
                url: "/Iletisim/MesajGonder/",
                data: { mail: mail, name: name, mesaj: mesaj },
                type: 'POST',
                dataType: 'json',
                success: function (data) {
                    alert("Mesajınız Gönderildi..");
                }
            });
        });
    });
</script>
